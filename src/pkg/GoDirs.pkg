# Makefile for recursively building + installing a number of directories
#
# Usage:
# dirs=dir1 dir2 dir3
# include Dirs.pkg
# all:$(dirs)

.PHONY: $(dirs)
$(dirs):
	$(MAKE) install -C $@

install: $(dirs)

.PHONY: clean
clean:
	$(foreach dir, $(dirs), $(MAKE) clean -C $(dir);)

.PHONY: test
test:
	$(foreach dir, $(dirs), $(MAKE) test -C $(dir);)


